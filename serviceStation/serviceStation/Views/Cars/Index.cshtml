@model serviceStation.Models.Client

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<div>
    <div>
        @Html.ActionLink("Back to client list", "Index", new { controller = "Clients" })
    </div>
    <fieldset>
        <legend>Client</legend>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Birthday)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Birthday)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

        </dl>
    </fieldset>
    @{
        var grid = new WebGrid(source: Model.Cars, rowsPerPage: 5);
    }
    @grid.GetHtml(columns: grid.Columns(
        grid.Column(columnName: "Model", header: "Model"),
        grid.Column(columnName: "Make", header: "Make"),
        grid.Column(columnName: "Year", header: "Year"),
        grid.Column(columnName: "VIN", header: "VIN"),
        grid.Column(format: item => Html.ActionLink("Edit", "Edit", new {id = item.CarId})),
        grid.Column(format: item => Html.ActionLink("Orders", "Index", new {controller = "Orders", id = item.CarId})),
        grid.Column(format: item => Html.ActionLink("Delete", "Delete", new {id = item.CarId}))))
</div>
    <div>
        @Html.ActionLink("Create new car", "Create", new { id = Model.ClientId})
    </div>
</body>

</html>
